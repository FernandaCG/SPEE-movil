<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"/>

        <EditText
            android:id="@+id/id_nombre"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_person_black"
            android:gravity="center"
            android:hint="Nombre(s)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_mail_registro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:gravity="center"
            android:hint="correo@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_telefono"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_smartphone_black_24dp"
            android:gravity="center"
            android:hint="+54 55-55555555"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:gravity="center"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_verificar_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:gravity="center"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <Button
            android:id="@+id/btn_crear_cuenta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="Crear Cuenta"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/regreso_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="¿Ya tienes una cuenta? ingresa aquí" />
    </LinearLayout>
</ScrollView>